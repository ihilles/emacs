;; Find definition in the current buffer
(setq-local imenu-create-index-function #'ggtags-build-imenu-index)


;; backup in one place. flat, no tree structure
(setq backup-directory-alist '(("" . "~/.emacs.d/backup")))

;; Init gtags from shell
(defun gtags-init ()
  "Runs a quick compile on the code.  Note this is specific to this work environment."
  (interactive)
  (with-temp-buffer
    (shell-command "gtags" t)
    (buffer-string)))
(global-set-key (kbd "C-c C-g") 'gtags-init)

;; Disable emacs lock file
(setq create-lockfiles nil)
